<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstruccionesActivity">

  <Button
      android:id="@+id/atrasInstrucciones"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ATRAS"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.904" />

  <TextView
      android:id="@+id/textViewTITULO"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="casual"
      android:text="INSTRUCCIONES"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.061" />

  <TextView
      android:id="@+id/textViewINSTRUCCIONES"
      android:layout_width="290dp"
      android:layout_height="329dp"
      android:text="MidletMensajero que permitirá gestionar una pequeña base de datos de clientes para poder enviarles mensajes de publicidad.                          Opciones :  \n 1.) Explorar la lista de clientes. \n 2.) Modificar la plantilla de mensaje publicitario. \n 3.) Enviar mensaje publicitario a la lista de clientes. \n  4.) Salir de la aplicación."
      android:textAlignment="textStart"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.495"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.348" />

</androidx.constraintlayout.widget.ConstraintLayout>